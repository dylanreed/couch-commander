<% if (results.length === 0) { %>
<p class="text-lounge-muted">No shows found. Try a different search.</p>
<% } else { %>
<div class="space-y-2">
  <% results.forEach(show => { %>
  <div class="bg-lounge-card rounded-xl p-3 flex gap-3 items-center card-hover">
    <% if (show.posterPath) { %>
    <img src="https://image.tmdb.org/t/p/w92<%= show.posterPath %>"
         alt="<%= show.name %>"
         class="w-12 poster-img">
    <% } else { %>
    <div class="w-12 h-16 bg-lounge-surface rounded-lg flex items-center justify-center">
      <svg class="w-5 h-5 text-lounge-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
      </svg>
    </div>
    <% } %>
    <div class="flex-1">
      <h4 class="font-medium text-lounge-cream"><%= show.name %></h4>
      <p class="text-sm text-lounge-muted"><%= show.firstAirDate?.substring(0, 4) || 'Unknown' %></p>
    </div>
    <button hx-post="/api/watchlist"
            hx-vals='{"tmdbId": <%= show.id %>}'
            hx-swap="none"
            hx-on::after-request="window.location.reload()"
            class="btn-gold px-4 py-1.5 rounded-lg text-sm">
      Add
    </button>
  </div>
  <% }) %>
</div>
<% } %>
